%header.page-header.group
  %h1
    %span Information
    Tax: judgments on appeals to the
    %br
    first-tier and upper tribunals

.pagination-row
  .page-entries
    = page_entries_info @ftt_decisions
  = will_paginate @ftt_decisions

.main.cf
  .col-narrow
    = form_tag ftt_decisions_path, :method => :get, :class => 'search_form' do
      %fieldset
        %h2
          %label{:for => "search_query"} Enter your search terms
        = text_field :search, :query, :value => params[:search][:query]
        .buttons.cf
          %button.button.primary.right{:type => "submit"} Search
      %fieldset#advanced_search
        %legend
          %h2 Refine your search
        %h3
          %label Name of judge
        = select :search, :judge, options_for_select([[]] + FttJudge.list, params[:search][:judge]), {}, {:placeholder => "Cases that this judge heard"}
        %h3
          %label Name of party
        = text_field :search, :party, :value => params[:search][:party], :placeholder => "Cases connected to this party"
        -# TODO: Make categories and subcategories lists dependent on each other
        %h3
          %label Category
        = select :search, :category, options_for_select([[]] + FttCategory.list, params[:search][:category]), {}, {:placeholder => "What the case is about"}
        %h3
          %label Sub-category
        = select :search, :subcategory, options_for_select([[]] + FttSubcategory.list, params[:search][:subcategory]), {}, {:placeholder => "More detail about the case"}
        .buttons.cf
          = button_tag "Clear", :class => "button left", :type => "reset"
  .col-wide
    .decisions
      .sort-filter
        Sort by <select><option>Date of decision</option><option>Date of update</option></select>
      %table.decisions-table
        %tr.headings
          %th Reference number
          %th Date of decision
        - @ftt_decisions.each do |decision, group = cycle('even', 'odd')|
          %tr.first{:class => group}
            %td
              = link_to link_label(decision), ftt_decision_path(decision)
              %p
                Parties:
                = "#{decision.claimant} v #{decision.respondent}"
              %p
                Categories:
                = display_categories(decision)
            %td.date= time_element(decision.decision_date)
          - if search_present()
            %tr.last{:class => group}
              %td{:colspan => 4}
                %strong Search result:
                = hilighted_search_result(params[:search][:query], decision.text)

.pagination-row.bottom
  .page-entries
    = page_entries_info @ftt_decisions
  = will_paginate @ftt_decisions
