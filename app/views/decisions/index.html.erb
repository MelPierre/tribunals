<%= form_tag decisions_path, :method => :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
<%= page_entries_info @decisions %>
<%= will_paginate @decisions %>
<table>
  <% @decisions.each do |decision| %>
  <tr>
    <td><%= link_to decision.promulgated_on, decision_path(decision) %></td>
    <td><%= decision.text.gsub(/[[:space:]]/, ' ').strip.first(100) %></td>
  </tr>
  <% end %>
</table>