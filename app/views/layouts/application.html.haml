- content_for :page_title, "#{Rails.configuration.app_title}"
- content_for :head do
  = csrf_meta_tag
  = render 'shared/ga'

- content_for :stylesheets do
  = stylesheet_link_tag "application", media: "all"

- content_for :javascripts do
  = javascript_include_tag 'application'
  = yield :javascript

- content_for :content_override do
  #wrapper.group.information
    %section#content.group{ role: 'main'}
      .browse-container.full-width.group
        = moj_flash
        = yield

= render template: "layouts/moj_template"


