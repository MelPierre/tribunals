- content_for :title, 'Listing Users'

= link_to 'Invite New User', new_admin_user_invitation_path

%table.table
  %tr
    %th Name
    %th Email
    %th Super admin
    %th Tribunals
    %th Invitiation
    %th 
    %th 

  - @users.each do |user|
    %tr
      %td= user.name
      %td= user.email
      %td= user.admin ? 'Yes' : 'No'
      %td= user.tribunals.map(&:code).join(',')
      %td= user.invited_by.try(:display_name)
      %td= link_to 'Edit', edit_admin_user_path(params[:tribunal_code], user )
      %td= link_to 'Delete', admin_user_path(params[:tribunal_code], user), method: :delete, data: { confirm: 'Are you sure?' }

.pagination-row.bottom
  .page-entries
    = will_paginate @users