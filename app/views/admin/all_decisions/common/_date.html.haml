.form-inputs.decision_date
  = form.input :decision_date, as: 'string', input_html: { maxlength: 10 }, label: t('simple_form.labels.decision.decision_date')
  = form.input :upload_date, as: 'string', input_html: { maxlength: 10, value: @decision.upload_date || Date.today}, label: t('simple_form.labels.decision.upload_date')
  = form.input :publication_date, as: 'string', input_html: { maxlength: 10 }, label: t('simple_form.labels.decision.publication_date')
